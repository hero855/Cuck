    class={`relative backdrop-blur-3xl rounded-t-3xl rounded-b border border-slate-600 pt-6 pb-2 space-y-1 overflow-hidden min-w-64 shadow-lg max-w-lg`}
    id={`pros-${cardOffset}`}
