        <div class="flex space-x-4 basis-full">
            <div class="p-5 rounded-lg bg-slate-100 size-20">

            <slot name="icon" />
            </div>
            <div class="flex-auto min-w-0 font-semibold">
                <p
                    class="text-sm leading-6 transition-all duration-500 text-cyan-500 demo-dark:text-cyan-400"
